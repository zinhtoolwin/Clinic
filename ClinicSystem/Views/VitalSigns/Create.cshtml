@model ClinicSystem.Models.VitalSign

@{
    ViewData["Title"] = "Create";
}



<h3>VitalSign</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PatientId" class="control-label"></label>
                <select asp-for="PatientId" class ="form-control" asp-items="ViewBag.PatientId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Height" class="control-label"> Height(cm) </label>
                <input asp-for="Height" class="form-control" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"> Weight(Lb)</label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Temperature" class="control-label"> Temperature(F)</label>
                <input asp-for="Temperature" class="form-control" />
                <span asp-validation-for="Temperature" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BloodSugar" class="control-label"> BloodSugar(mg/dL)</label>
                <input asp-for="BloodSugar" class="form-control" />
                <span asp-validation-for="BloodSugar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BloodPressureUNo"  class="control-label">UpperBloodPressure(mmHg)</label>
                <input asp-for="BloodPressureUNo" class="form-control" />
                <span asp-validation-for="BloodPressureUNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BloodPressureLNo" class="control-label">LowerBloodPressure(mmHg)</label>
                <input asp-for="BloodPressureLNo" class="form-control" />
                <span asp-validation-for="BloodPressureLNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

