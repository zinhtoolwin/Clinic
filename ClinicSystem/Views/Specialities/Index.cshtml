@model IEnumerable<ClinicSystem.Models.Speciality>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-green">Specialities List</h1>
<hr />

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<form asp-controller="Specialities" asp-action="Index">
    <p>
        Speciality:<input type="text" class="form-group" name="searchString"/>
        <input type="submit" class="btn btn-secondary" value="Search" />
    </p>
</form>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                No
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    @{int row = 0; }
    <tbody>
        @foreach (var item in Model)
        {
           <tr>
                <td>
                   @(row+=1)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Name)
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
            


          }


    </tbody>
</table>
